<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookSale.Managment.UI</title>

    <link href="~/clientbundle/layout.site.css" rel="stylesheet" />

    <script src="~/admin/assets/vendor/js/helpers.js"></script>
    <script src="~/admin/assets/js/config.js"></script>


</head>
<body>
    <div class="layout-wrapper layout-content-navbar layout-without-menu">

        <div class="layout-container">
            <div class="layout-page">
                <partial name="_LoginPartial.cshtml" />

                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        
    </div>
    
    
    <div class="layout-overlay layout-menu-toggle"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookSale.Managment.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/admin/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/clientbundle/layout.site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
