<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookSale.Managment.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <link href="~/admin/assets/vendor/fonts/materialdesignicons.css" rel="stylesheet" />
    <link href="~/admin/assets/vendor/libs/node-waves/node-waves.css" rel="stylesheet" />
    <link href="~/admin/assets/css/demo.css" rel="stylesheet" />
    <link href="~/admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/admin/assets/vendor/css/core.css" rel="stylesheet" class="template-customizer-core-css" />
    <link href="~/admin/assets/vendor/css/theme-default.css" rel="stylesheet" />
    <link href="~/js/toaster/jquery.toast.min.css" rel="stylesheet" />

    <script src="~/admin/assets/vendor/js/helpers.js"></script>
    <script src="~/admin/assets/js/config.js"></script>


</head>
<body>
    <div class="layout-wrapper layout-content-navbar layout-without-menu">

        <div class="layout-container">
            <div class="layout-page">
                <partial name="_LoginPartial.cshtml" />

                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        
    </div>
    
    
    <div class="layout-overlay layout-menu-toggle"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookSale.Managment.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/admin/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/admin/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/admin/assets/vendor/js/bootstrap.js"></script>
    <script src="~/js/toaster/jquery.toast.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.blockui.js"></script>
    <script src="~/admin/assets/vendor/libs/node-waves/node-waves.js"></script>
    <script src="~/admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/admin/assets/vendor/js/menu.js"></script>
    <script src="~/admin/assets/js/main.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/lib/moment.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
