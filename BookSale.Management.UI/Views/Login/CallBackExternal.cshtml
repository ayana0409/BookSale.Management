@model BookSale.Management.Application.DTOs.ViewModal.ExternalLoginModel;

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associate your @Model.Provider account.</h2>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.Provider</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">
        @* <form asp-page-handler="External" asp-route-returnUrl="@Model.ReturnUrl" method="post"> *@

        <form asp-action="ConfirmationExternal" asp-controller="login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input hidden asp-for="@Model.Fullname" />
                <input hidden asp-for="@Model.ReturnUrl" />
                <input hidden asp-for="@Model.Provider" />
                <input asp-for="@Model.Email" class="form-control" autocomplete="email" placeholder="Please enter your email." />
                
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

