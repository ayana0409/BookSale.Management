@using BookSale.Management.Application.DTOs.Report;
@using System.Globalization
@model ReportDTO;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Bill</title>
    <style>
        page {
            size: A4 portrait;
            margin: 20mm;
        }
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
            overflow: hidden;
            padding: 20px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        header {
            border-bottom: 1px solid #ccc;
            margin-bottom: 20px;
        }
        header h1 {
	    color: #5577ed;
            margin: 0;
            padding-bottom: 10px;
        }
        .order-info, .customer-info {
            margin-bottom: 20px;
        }
        .order-info table, .customer-info table, .product-list table {
            width: 100%;
            border-collapse: collapse;
        }
        .order-info th, .customer-info th, .product-list th, .product-list td {
            padding: 8px;
            text-align: left;
        }
        .product-list th {
            background-color: #f4f4f4;
        }
        .product-list td {
            border-top: none;
            border-bottom: 1px solid #ccc;
        }
        .total {
            text-align: right;
            margin-top: 20px;
        }
        .total strong {
            font-size: 1.2em;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Order Bill</h1>
        </header>

        <div class="order-info">
            <h2>Order Information</h2>
            <table>
                <tr>
                    <th>Order Code</th>
                    <td>@(Model.code)</td>
                </tr>
                <tr>
                    <th>Created On</th>
                    <td>@(Model.CreateOn.ToString("dd/MM/yyyy"))</td>
                </tr>
            </table>
        </div>

        <div class="customer-info">
            <h2>Customer Information</h2>
            <table>
                <tr>
                    <th>Name</th>
                    <td>@(Model.Address.Name)</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@(Model.Address.Email)</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@(Model.Address.Name)</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@(Model.Address.Address)</td>
                </tr>
            </table>
        </div>

        <div class="product-list">
            <h2>Product List</h2>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int itemNumber = 0;
                        double totalPrice = 0;

                        foreach (OrderDetailDTO detail in Model.Details)
                        {
                            itemNumber++;
                            <tr>
                                <td>@itemNumber</td>
                                <td>@detail.ProductName</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.UnitPrice.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</td>
                                <td>@((detail.Quantity * detail.UnitPrice).ToString("C", CultureInfo.GetCultureInfo("vi-VN")))</td>
                            </tr>

                            totalPrice += detail.Quantity * detail.UnitPrice;
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="total">
            <p><strong>Total: @(totalPrice.ToString("C", CultureInfo.GetCultureInfo("vi-VN")))</strong></p>
        </div>
    </div>
</body>
</html>
