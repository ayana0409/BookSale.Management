@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}

<h1>Index of admin</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="m-r-10">

                        </div>
                        <div>
                            <h3>Welcome</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mt-3">
                <div class="card-body">
                    <h4>Last Montn Income</h4>
                    <select id="ddl-genre" class="form-control">
                        <option value="0">Please select</option>
                        @{
                            var genres = ViewBag.Genres as IEnumerable<SelectListItem>;
                            if (genres != null)
                            {
                                foreach (var genre in genres)
                                {
                                    <option value="@genre.Value">@genre.Text</option>
                                }
                            }
                        }
                    </select>
                    
                    <div id="main" class="my-3" style="width:100%; height: 550px"></div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/echarts.min.js"></script>
    <script src="~/admin/components/dashboard.js"></script>

}