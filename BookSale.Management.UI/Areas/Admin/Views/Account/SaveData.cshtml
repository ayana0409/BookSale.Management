@model BookSale.Management.Application.DTOs.AccountDTO 

@{
    ViewData["Title"] = "SaveData";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h4 class="card-header">Profile Details</h4>
            <div class="card-body pt-2 mt-1">
                <form asp-controller="account" asp-action="savedata" method="POST" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            @{
                                if (!string.IsNullOrEmpty(Model.Id))
                                {
                                    <img src="~/images/user/@(Model.Id).png" alt="user-avatar" class="d-block w-px-120 h-px-120 rounded" id="img-upload">
                                }
                                else
                                {
                                    <img src="../assets/img/avatars/no-image.jpg" alt="user-avatar" class="d-block w-px-120 h-px-120 rounded" id="img-upload">
                                }
                            }
                                    
                            <div class="button-wrapper">
                                <label for="upload" class="btn btn-primary me-2 mb-3 waves-effect waves-light" tabindex="0">
                                    <span class="d-none d-sm-block">Upload new photo</span>
                                    <i class="mdi mdi-tray-arrow-up d-block d-sm-none"></i>
                                    <input type="file" id="upload" class="account-file-input" hidden="" accept="image/png, image/jpeg" asp-for="Avatar">
                                </label>

                                <div class="text-muted small">Allowed JPG, GIF or PNG. Max size of 800K</div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2 gy-4">
                        @Html.Raw("<div asp-validation-summary='All' class='text-danger'></div>")
                        <div class="col-md-12">
                            <div class="form-floating form-floating-outline">
                                @Html.DropDownListFor(x => x.RoleName, ViewBag.Roles as IEnumerable<SelectListItem>, "Please select",
                                                        new { @class = "form-select color-dropdown" })
                                <label for="Role">Role <span class="text-danger">*</span></label>
                                <span class="text-danger" asp-validation-for="RoleName"></span>
                            </div>
                        </div>
                        <input class="form-control" type="text" asp-for="Id" readonly hidden/>
                        <div class="col-md-6">
                            <div class="form-floating form-floating-outline">
                                @{
                                    if (!string.IsNullOrEmpty(Model.Id))
                                    {
                                        <input class="form-control" type="text" placeholder="Username" asp-for="Username" readonly/>
                                    }
                                    else
                                    {
                                        <input class="form-control" type="text" placeholder="Username" asp-for="Username" />
                                        <span class="text-danger" asp-validation-for="Username"></span>
                                    }
                                }
                                <label for="Username">Username <span class="text-danger">*</span></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @if (string.IsNullOrEmpty(Model.Id))
                            {
                                <div class="form-floating form-floating-outline">
                                    <input class="form-control" type="password" placeholder="Password" asp-for="Password" />
                                    <label for="Password">Password <span class="text-danger">*</span></label>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            }
                                    
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating form-floating-outline">
                                <input type="text"
                                        class="form-control"
                                        placeholder="Fullname" 
                                        asp-for="Fullname"/>
                                <label for="Fullname">Fullname <span class="text-danger">*</span></label>
                                <span class="text-danger" asp-validation-for="Fullname"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating form-floating-outline">
                                <input class="form-control"
                                        type="text"
                                        placeholder="john.doe@example.com" 
                                        asp-for="Email"/>
                                <label for="email">E-mail <span class="text-danger">*</span></label>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-merge">
                                <div class="form-floating form-floating-outline">
                                    <input type="text"
                                            class="form-control"
                                            placeholder="Mobile Phone" 
                                            asp-for="MobilePhone"/>
                                    <label for="MobilePhone">Mobile Phone</label>
                                </div>
                                <span class="input-group-text">VN (+84)</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-merge">
                                <div class="form-floating form-floating-outline">
                                    <input type="text"
                                            class="form-control"
                                            placeholder="Phone" 
                                            asp-for="Phone"/>
                                    <label for="Phone">Phone</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating form-floating-outline">
                                <input type="text"
                                        class="form-control"
                                        id="address"
                                        name="address"
                                        placeholder="Address" 
                                        asp-for="Address"/>
                                <label for="address">Address</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-check col-md-12 mt-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <label class="form-check-label" for="IsActive"> Is active </label>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary me-2">Save changes</button>
                        @Html.ActionLink("Cancel", "Index", "Account", null, new { @class = "btn btn-outline-secondary" })
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
    @section Scripts {
        <script src="~/admin/components/account_savedata.js"></script>
    }
</div>

