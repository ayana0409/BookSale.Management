
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}

<div class="misc-wrapper">
    <h1 class="mb-2 mx-2" style="font-size: 6rem">404</h1>
    <h4 class="mb-2">OH NO! SOME THING WORNG! ⚠️</h4>
    <p class="mb-4 mx-2">Please try again or contact to administrator.</p>
    <div class="d-flex justify-content-center mt-5">
        <img src="~/admin/assets/img/illustrations/tree.png"
             alt="misc-tree"
             class="img-fluid misc-object d-none d-lg-inline-block"
             width="80" />
        <img src="~/admin/assets/img/illustrations/misc-mask-light.png"
             alt="misc-error"
             class="scaleX-n1-rtl misc-bg d-none d-lg-inline-block"
             data-app-light-img="illustrations/misc-mask-light.png"
             data-app-dark-img="illustrations/misc-mask-dark.png" />
        <div class="d-flex flex-column align-items-center">
            <img src="~/admin/assets/img/illustrations/404.png"
                 alt="misc-error"
                 class="misc-model img-fluid z-1"
                 width="780" />
            <div>
                <a href="/home" class="btn btn-primary text-center my-4">Back to home</a>
            </div>
        </div>
    </div>
</div>

